

<h1>Lista Urlopowa</h1>
<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
      <th> Rozpoczęcie urlopu </th>
      <th> Zakończenie urlopu </th>
      <th> Użytkownik </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vacations.each do |vacation| %>
      <tr>
        <td><%= vacation.starttime %></td>
        <td><%= vacation.endtime %></td>
        <td><%= vacation.user_id %></td>
        <td><%= link_to 'Show', vacation %></td>
        <td><%= link_to 'Edit', edit_vacation_path(vacation) %></td>
        <td><%= link_to 'Destroy', vacation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

