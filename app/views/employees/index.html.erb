<h1>Lista użytkowników</h1>

<table>
  <thead>
    <tr>
      <th>email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.email %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee),class: "btn btn-primary" %></td>
        <td><%= link_to 'Show', employee_path(employee),class: "btn btn-primary"%></td>

        <td><%= link_to 'Destroy', employee_path(employee),class: "btn btn-primary", method: :delete, data: { confirm: 'Jesteś pewny?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

